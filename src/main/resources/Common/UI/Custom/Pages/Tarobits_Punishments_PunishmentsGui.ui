$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 1400, Height: 900);

  #Title {
    Group {
      $C.@Title {
        @Text = %tarobits.punishments.gui.punishments.title;
      }
    }
  }

  #Content {
    LayoutMode: Top;

    Label #Username {
        Style: (
            HorizontalAlignment: Center,
            FontSize: 40,
            RenderBold: true
        );
    }

    Group #Header {
        Background: PatchStyle(TexturePath: "../Common/DropdownBox.png", Border: 20);
        Padding: (Bottom: 15);
    }

    Group {
        Anchor: (Height: 1, Width: 1300, Top: 10, Bottom: 10);
    }

    Group {
        LayoutMode: Left;
        FlexWeight: 1;
        Group {
            LayoutMode: Top;
            FlexWeight: 6;
            Label {
                Text: %tarobits.punishments.gui.punishments.history;
                Style: (
                    RenderBold: true,
                    HorizontalAlignment: Center,
                    FontSize: 26
                );
            }
            Label {
                Text: %tarobits.punishments.gui.punishments.bans;
                Anchor: (Top: 15);
                Style: (
                    RenderBold: true,
                    HorizontalAlignment: Center,
                    FontSize: 20
                );
            }
            Group #BanBox {
                LayoutMode: TopScrolling;
                FlexWeight: 1;
                Anchor: (Top: 2);
                ScrollbarStyle: $C.@TranslucentScrollbarStyle;
                Group #BanList {
                    LayoutMode: Top;
                    Anchor: (Top: 2);
                }
            }

            Label {
                Text: %tarobits.punishments.gui.punishments.mutes;
                Anchor: (Top: 15);
                Style: (
                    RenderBold: true,
                    FontSize: 20,
                    HorizontalAlignment: Center
                );
            }
            Group #MuteBox {
                LayoutMode: TopScrolling;
                FlexWeight: 1;
                Anchor: (Top: 2);
                ScrollbarStyle: $C.@TranslucentScrollbarStyle;
                Group #MuteList {
                    LayoutMode: Top;
                    Anchor: (Top: 2);
                }
            }
            Label {
                Text: %tarobits.punishments.gui.punishments.kicks;
                Anchor: (Top: 15);
                Style: (
                    RenderBold: true,
                    HorizontalAlignment: Center,
                    FontSize: 20
                );
            }
            Group #KickBox {
                LayoutMode: TopScrolling;
                FlexWeight: 1;
                Anchor: (Top: 2);
                ScrollbarStyle: $C.@TranslucentScrollbarStyle;
                Group #KickList {
                    LayoutMode: Top;
                    Anchor: (Top: 2);
                }
            }
            Label {
                Text: %tarobits.punishments.gui.punishments.warns;
                Anchor: (Top: 15);
                Style: (
                    RenderBold: true,
                    HorizontalAlignment: Center,
                    FontSize: 20
                );
            }
            Group #WarnBox {
                LayoutMode: TopScrolling;
                FlexWeight: 1;
                Anchor: (Top: 2);
                ScrollbarStyle: $C.@TranslucentScrollbarStyle;
                Group #WarnList {
                    LayoutMode: Top;
                    Anchor: (Top: 2);
                }
            }
        }
        Group {
            Anchor: (Width: 3, Left: 10, Right: 10);
        }
        Group {
            LayoutMode: Top;
            FlexWeight: 2;
            Padding: 20;
            Background: PatchStyle(TexturePath: "../Common/ContainerFullPatch.png", Border: 20);
            Label {
                Anchor: (Bottom: 15);
                Style: (
                    FontSize: 26,
                    RenderBold: true,
                    HorizontalAlignment: Center
                );
                Text: %tarobits.punishments.gui.punishments.actions;
            }
            $C.@CancelTextButton #NewPunishButton {
                Text: %tarobits.punishments.gui.punishments.buttons.new;
                Style: (
                    ...$C.@CancelTextButtonStyle,
                    Sounds: (
                        ...$C.@ButtonSounds
                    )
                );
            }
            Group {
                FlexWeight: 1;
            }
            $C.@SecondaryTextButton #CustomPunishButton {
                Text: %tarobits.punishments.gui.punishments.buttons.newcustom;
            }
            $C.@SecondaryTextButton #UnbanButton {
                @Anchor = (Top: 10);
                Text: %tarobits.punishments.gui.punishments.buttons.unban;
            }
            $C.@SecondaryTextButton #UnmuteButton {
                @Anchor = (Top: 10);
                Text: %tarobits.punishments.gui.punishments.buttons.unmute;
            }
            Group {
                FlexWeight: 3;
            }
        }
    }
  }
}

$C.@BackButton {}